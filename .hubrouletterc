        }
      },
      {
        "type": "slack_notification",
        "config": {
          "event": "assign_assigned",
          "template": "Assigned {{.Repository.Owner}}/{{.Repository.Name}} to #{{.Event.PullRequestNumber}}: {{.Event.Assignees}}"
        }
      }
    ],
    "pull_request:reopened": [
      {
        "type":"assign",
        "config": {
          "strategy": "required",
          "assignees": ["temeroustitan"]
        }
      },
      {
        "type": "slack_notification",
        "config": {
          "event": "assign_assigned",
          "template": "#{{.Event.PullRequestNumber}} <reopened> + assigned: {{.Event.Assignees}}"
        }
      }
    ],
    "pull_request:assigned": [
    ]
  }
}
